<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UnitystationLauncher"
             xmlns:valueConverters="clr-namespace:UnitystationLauncher.ValueConverters"
             x:Class="UnitystationLauncher.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    <Application.Resources>
        <valueConverters:HumanizerValueConverter x:Key="Humanizer" />
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml" />
        <StyleInclude Source="/Styles.axaml" />
    </Application.Styles>
</Application>